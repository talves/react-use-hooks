{
  "name": "site",
  "version": "1.0.1",
  "type": "module",
  "main": "index.js",
  "private": true,
  "author": "Tony Alves (@talves)",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./.tmp && rm -rf ./public",
    "start": "NODE_ENV=production yarn gulp",
    "postinstall": "node ./postinstall.js",
    "build": "yarn postinstall && yarn build:css && yarn build:site",
    "build:css": "postcss --config legacy-commonjs src/index.css -o public/styles.css --env production",
    "build:site": "toast incremental .",
    "test": "echo \"No tests on Site\""
  },
  "dependencies": {
    "@mdx-js/preact": "^1.6.22",
    "@talves/use-component-size": "^0.2.0",
    "@talves/use-previous": "*",
    "@talves/use-web-storage": "*",
    "@toastdotdev/mdx": "^0.1.5",
    "autoprefixer": "10.2.3",
    "console.table": "^0.10.0",
    "esinstall": "^1.0.5",
    "preact": "^10.5.12",
    "pretty-bytes": "^5.5.0",
    "toast": "^0.3.42"
  },
  "devDependencies": {
    "browser-sync": "^2.26.13",
    "execa": "^4.1.0",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "playwright-aws-lambda": "^0.6.0",
    "playwright-core": "^1.8.0",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "query-string": "^6.13.8"
  },
  "snowpack": {
    "exclude": [
      "gulpfile.js",
      "public/**/*",
      "toast.js"
    ],
    "installOptions": {
      "alias": {
        "react": "preact/compat"
      }
    },
    "knownEntrypoints": [
      "@talves/use-component-size",
      "@talves/use-previous",
      "@talves/use-web-storage",
      "preact/hooks",
      "preact"
    ]
  }
}