{
  "name": "site",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "private": true,
  "author": "Tony Alves (@talves)",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./.tmp && rm -rf ./public",
    "start": "NODE_ENV=production yarn gulp",
    "postinstall": "breadbox --dest public/web_modules",
    "build": "yarn postinstall && yarn build:css && yarn build:site",
    "build:css": "postcss --config legacy-commonjs src/index.css -o public/styles.css --env production",
    "build:site": "toast incremental .",
    "test": "echo \"No tests on Site\""
  },
  "dependencies": {
    "@mdx-js/preact": "^1.6.22",
    "@sector/breadbox": "^0.0.4",
    "@talves/use-previous": "*",
    "@talves/use-web-storage": "*",
    "@toastdotdev/mdx": "^0.1.5",
    "autoprefixer": "10.2.3",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "preact": "^10.5.12",
    "tailwindcss": "^2.0.2",
    "toast": "^0.3.41"
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "browser-sync": "^2.26.13",
    "execa": "^4.1.0",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "postcss-import": "^14.0.0"
  },
  "snowpack": {
    "exclude": [
      "gulpfile.js",
      "public/**/*",
      "toast.js"
    ],
    "installOptions": {
      "alias": {
        "react": "preact/compat"
      }
    },
    "knownEntrypoints": [
      "@talves/use-previous",
      "@talves/use-web-storage",
      "preact/hooks",
      "preact"
    ]
  }
}