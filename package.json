{
  "name": "react-use-hooks",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/@talves/*",
    "www/*"
  ],
  "author": "talves <tony@3alves.com> (@talves)",
  "license": "MIT",
  "dependencies": {
    "@changesets/cli": "^2.13.1"
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "eslint": "^7.13.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "minimist": "^1.2.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.2"
  },
  "scripts": {
    "prettier:all": "yarn prettier --write .",
    "build:site": "yarn workspace site build",
    "build:previous": "yarn workspace @talves/use-previous build:lib",
    "build:web-storage": "yarn workspace @talves/use-web-storage build:lib",
    "build:all": "yarn workspaces run build",
    "build": "yarn build:all",
    "og:images": "node ./www/scripts/social-card.mjs",
    "release": "yarn changeset publish",
    "test": "yarn workspaces run test"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write"
    ],
    "*.{js}": [
      "yarn test"
    ]
  }
}