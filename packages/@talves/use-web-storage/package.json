{
  "name": "@talves/use-web-storage",
  "version": "0.7.1",
  "description": "React hook (useWebStorage)",
  "source": "src/index.js",
  "main": "./dist/lib/use-web-storage.js",
  "module": "./dist/lib/use-web-storage.esm.js",
  "unpkg": "./dist/lib/use-web-storage.umd.js",
  "exports": {
    ".": {
      "require": "./dist/lib/use-web-storage.js",
      "default": "./lib/index.mjs"
    }
  },
  "author": "talves <tony@3alves.com> (@talves)",
  "license": "MIT",
  "files": [
    "/dist",
    "/lib",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/talves/react-use-hooks/packages/@talves/use-web-storage"
  },
  "dependencies": {
    "react": "^17.0.1"
  },
  "devDependencies": {
    "microbundle": "^0.13.0"
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:dist": "microbundle lib/index.mjs -o dist/lib -f cjs,esm,umd --no-compress --no-sourcemap",
    "watch": "microbundle lib/index.mjs -o dist/lib -f cjs,esm,umd --watch --no-compress --no-sourcemap",
    "build": "yarn clean && yarn build:dist",
    "dev": "yarn build:dev",
    "format": "prettier --write \"src/**/*.js\""
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions"
  ]
}